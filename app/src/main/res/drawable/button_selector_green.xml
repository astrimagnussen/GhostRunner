<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="30dp" />
                    <solid android:color="@color/colorShadow" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" >
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/colorButtonGreenDarkBackground" android:startColor="@color/colorButtonGreenLightBackground" />
                    <stroke android:width="1dp" android:color="@color/colorButtonBackground" />
                    <corners android:radius="30dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="30dp" />
                    <solid android:color="@color/colorShadowPressed" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/colorButtonGreenDarkPressed" android:startColor="@color/colorButtonGreenLightPressed" />
                    <stroke android:width="1dp" android:color="@color/colorButtonBackground" />
                    <corners android:radius="30dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>